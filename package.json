{
  "name": "income-calculator",
  "productName": "Income Calculator",
  "version": "1.0.3",
  "description": "A desktop application for calculating income, taxes, and tracking expenses",
  "main": "main.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "set NODE_ENV=development && electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "income",
    "calculator",
    "desktop",
    "electron",
    "finance",
    "tax"
  ],
  "build": {
    "appId": "com.yourname.income-calculator",
    "productName": "Income Calculator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "SebastianOana",
      "repo": "WebApp",
      "private": false
    }
  },
  "devDependencies": {
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2"
  }
}
